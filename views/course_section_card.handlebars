<article class="post">

    <header class="post-header">
        <h1 class="post-title">{{title}}</h1>
        <section class="post-meta">
            {{#author}}
                <p class="author">by <a href="{{url}}">{{name}}</a></p>
            {{/author}}
        </section>
    </header>
    <figure class="post-image">
        <amp-img src="{{img_url}}" width="600" height="400" layout="responsive"></amp-img>
    </figure>
    <section class="post-content">

        {{{card_content}}}

        <p style="text-align: center;">
            <a style="color: deeppink;" href="{{canon_link}}">View Full Version</a>
            <br />
            <small>It's 100% FREE!</small>
        </p>
    </section>

</article>
